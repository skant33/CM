@model CM.ViewModels.AppointmentViewModel
@using Microsoft.AspNetCore.Http;
@using CM.Models
@{
    ViewData["Title"] = "AfspraakPage";
}

<h2>Agenda</h2>



@if (Model.appointment.Count == 0)
{

    <label> No appointments this week</label>
}

