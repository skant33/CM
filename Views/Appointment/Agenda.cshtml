@model CM.ViewModels.AppointmentViewModel
@using Microsoft.AspNetCore.Http;
@using CM.Models
@{
    ViewData["Title"] = "AfspraakPage";
}

<h1>Agenda</h1>
<h3>Werkweek : @DateTime.Now.AddDays(DayOfWeek.Monday - DateTime.Now.DayOfWeek).Day/@DateTime.Now.AddDays(DayOfWeek.Monday - DateTime.Now.DayOfWeek).Month tot @DateTime.Now.AddDays(DayOfWeek.Friday - DateTime.Now.DayOfWeek).Day/@DateTime.Now.AddDays(DayOfWeek.Monday - DateTime.Now.DayOfWeek).Month</h3>
