        <div class="row">
            <div class="col-md-2">
                <h3> @DayOfWeek.Monday </h3>
                @foreach (var item in Model.appointment)
                {
                    @if (item.DateTime.DayOfWeek == DayOfWeek.Monday)
                    {
                        <br \ />
                        <div style="border-color: #1657EA; border-style:solid; border-width:thin">
                            <br \ />
                            <label> Afspraak : @item.AppointmentID </label>
                            <label> Tijd : @item.DateTime.TimeOfDay </label>
                            <label> Duur : @item.Duration Minuten</label>
