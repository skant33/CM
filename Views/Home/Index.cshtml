@model CM.ViewModels.AppointmentViewModel
@using CM.Models
@{
    ViewData["Title"] = "Dashboard";
}


<h2>Dashboard</h2>
<h4>Your appointments</h4>
@if (Model.appointment.Count == 0)
{

    <label> No appointments this week</label>
}

else
{
    <div class="datatable col-lg-12">
        <!-- Headers -->
        <div class="datatable-header">
            <!-- Header selection -->
            <div class="datatable-header-item m-r-0 m-l-8">
                <div class="form-check v-center">
                    <label class="m-0">
                        <input class="form-check-input"
                               type="checkbox"
                               value="option1" />
                        <span class="label p-0"></span>
                    </label>
                </div>
            </div>
            <!-- Header 1 -->
            <div class="datatable-header-item col-2">
                <span>Date</span>
            </div>
            <!-- Header 2 -->
            <div class="datatable-header-item col-2">
                <span>Duration</span>
            </div>
            <!-- Header 3 -->
            <div class="datatable-header-item col-2">
                <span>Description</span>
            </div>
        </div>

        <!-- Row -->
        @foreach (Appointment appointment in Model.appointments)
        {
            <div class="datatable-row">
                <!-- Row item 1 -->
                <div class="datatable-row-item col-2">
                    <span>@appointment.DateTime</span>
                </div>
                <!-- Row item 2 -->
                <div class="datatable-row-item col-2">
                    <span>@appointment.Duration minuten</span>
                </div>
                <!-- Row item 3 -->
                <div class="datatable-row-item col-8">
                    <span>@appointment.Description</span>
                </div>
            </div>
        }
    </div>
}

<h4>Your doctors</h4>
@if (ViewBag.LinkedDoctors != null)
{
    @foreach (Account account in ViewBag.LinkedDoctors)
    {
        <div>Name: @account.Name</div>
    }
}
