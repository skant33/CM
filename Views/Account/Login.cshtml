
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<h2>Login</h2>
@model CM.ViewModels.AccountDetailViewModel
<form asp-area="" asp-controller="Account" asp-action="Login">
    <div class="form-group" align="left">
        <div class="form-row">
            <h6>Email</h6>
            <div class="form-input">
                <input asp-for="Email" type="text" required class="form-control" id="exampleFormControlInput4" placeholder="Voer email in">
            </div>
            <h6>Password</h6>
            <div class="form-input">
                <input asp-for="Password" type="password" required class="form-control" id="exampleFormControlInput4" placeholder="Voer wachtwoord in">
            </div>
        </div>
        <button type="submit" class="btn btn-cta">Log in</button>
    </div>
</form>


<a asp-area="" asp-controller="Account" asp-action="Register">Register now</a>
