
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<h2>Register</h2>
@model CM.ViewModels.AccountDetailViewModel

<form asp-area="" asp-controller="Account" asp-action="Register">
    <div class="form-group">
        <h6>Name</h6>
        <div class="form-input">
            <input asp-for="Name" type="text" required class="form-control" id="exampleFormControlInput4" placeholder="Input name" required>
        </div>

        <h6>Password</h6>
        <div class="form-input">
            <input asp-for="Password" type="text" required class="form-control" id="exampleFormControlInput4" placeholder="Input password" required>
        </div>

        <h6>Reminder Type</h6>
        <div class="form-group">
            <div class="form-row">
                <div class="form-radio">
                    <input class="form-check-input" type="radio"
                           id="exampleRadios1" value="1" asp-for="MeldingID">
                    <label class="form-check-label" for="exampleRadios1">
                        SMS
                    </label>
                    <input class="form-check-input" type="radio"
                           id="exampleRadios2" value="2" asp-for="MeldingID">
                    <label class="form-check-label" for="exampleRadios2">
                        Email
                    </label>
                    <input class="form-check-input" type="radio"
                           id="exampleRadios3" value="3" asp-for="MeldingID">
                    <label class="form-check-label" for="exampleRadios3">
                        Phone
                    </label>
                </div>
            </div>
        </div>

        <h6>Date of Birth</h6>
        @*@<div class="container">*@
    <div class="row">
        <div class='col-sm-6'>
            <input type='text' asp-for="DateOfBirth" class="form-control" id='datetimepicker4' />
        </div>
        <script type="text/javascript">
            $(function () {
                $('#datetimepicker4').datetimepicker();
            });
        </script>
    </div>
@*</div>*@
                        @*<div class="form-input">
                            <input asp-for="DateOfBirth" type="text" required class="form-control" id="exampleFormControlInput4" placeholder="Input date">
                        </div>*@

                        <h6>Email</h6>
                        <div class="form-input">
                            <input asp-for="Email" id="exampleFormControlInput4" class=" form-control" placeholder="Input email" size="30" required>
                        </div>

                        <h6>Phone number</h6>   
                        <div class="form-input">
                            <input asp-for="PhoneNumber" type="text" minlength="13" maxlength="13" class="form-control" id="exampleFormControlInput4" placeholder="00316">
                        </div>
                        <br />
                        <button type="submit" class="btn btn-cta">Register</button>
</form>


<a asp-area="" asp-controller="Account" asp-action="Login">Login</a>