                            <input asp-for="DateOfBirth" type="text" required class="form-control" id="exampleFormControlInput4" placeholder="Input date">
                        </div>*@

                        <h6>Email</h6>
                        <div class="form-input">
                            <input asp-for="Email" id="exampleFormControlInput4" class=" form-control" placeholder="Input email" size="30" required>
                        </div>

                        <h6>Phone number</h6>   
                        <div class="form-input">
                            <input asp-for="PhoneNumber" type="text" minlength="13" maxlength="13" class="form-control" id="exampleFormControlInput4" placeholder="00316">
                        </div>
                        <br />
                        <button type="submit" class="btn btn-cta">Register</button>
</form>


<a asp-area="" asp-controller="Account" asp-action="Login">Login</a>