
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<h2>Register</h2>
@model CM.ViewModels.AccountDetailViewModel

<form asp-area="" asp-controller="Account" asp-action="Register">
    <div class="form-group">
        <h6>Name</h6>
        <div class="form-input">
            <input asp-for="Name" type="text" required class="form-control" id="exampleFormControlInput4" placeholder="Input name" required>
        </div>

        <h6>Password</h6>
        <div class="form-input">
            <input asp-for="Password" type="text" required class="form-control" id="exampleFormControlInput4" placeholder="Input password" required>
        </div>

        <h6>Date of Birth</h6>
        @*@<div class="container">*@
    <div class="row">
        <div class='col-sm-6'>
            <input type='text' asp-for="DateOfBirth" class="form-control" id='datetimepicker4' />
        </div>
        <script type="text/javascript">
            $(function () {
                $('#datetimepicker4').datetimepicker();
            });
        </script>
    </div>
@*</div>*@
