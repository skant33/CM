@model CM.ViewModels.AppointmentDetailViewModel
@using CM.Models
@{
    ViewData["Title"] = "Beheerder";
}

<h1>Link accounts</h1>

<form asp-area="" asp-controller="Account" asp-action="LinkAccounts">
    <div class="form-group">
        <div>Link Doctor:</div>
        <select asp-for="Doctor.AccountID">
            @foreach (var item in ViewBag.AllDoctors)
            {
                <option value="@item.AccountID">@item.Name</option>
            }
        </select>
        <div>to Patient:</div>
        <select asp-for="Patient.AccountID">
            @foreach (var item in ViewBag.AllPatients)
            {
                <option value="@item.AccountID">@item.Name</option>
            }
        </select>
        <button type="submit" class="btn btn-cba">Link accounts</button>
    </div>
</form>

<h1>Hangfire</h1>
<a asp-area="" asp-controller="Notification" asp-action="StartHangfire">Start</a>
<a asp-area="" asp-controller="Notification" asp-action="StopHangfire">Stop</a>

<h1>Example conversation</h1>
<a asp-area="" asp-controller="Account" asp-action="Example">Call</a>
